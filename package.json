{
  "name": "greeting-service",
  "version": "0.0.0",
  "description": "Greeting service",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "license": "MIT",
  "private": true,
  "bugs": "https://github.com/kevinpollet/typescript-multistage-docker/issues",
  "homepage": "https://github.com/kevinpollet/typescript-multistage-docker#readme",
  "repository": "github:kevinpollet/typescript-multistage-docker",
  "main": "lib/server.js",
  "scripts": {
    "build": "rm -rf lib && tsc -p tsconfig.build.json",
    "format": "prettier --write '*.{yml,json,md}' '{src,test}/**/*'",
    "prestart": "npm run build",
    "prestart:watch": "npm run build",
    "start": "node .",
    "start:watch": "tsc-watch --onSuccess 'node .'",
    "test": "jest --preset ts-jest"
  },
  "dependencies": {
    "fastify": "2.6.0"
  },
  "devDependencies": {
    "@kevinpollet/tsconfig": "0.1.0",
    "@types/jest": "24.0.15",
    "@types/node": "12.6.2",
    "husky": "3.0.0",
    "jest": "24.8.0",
    "lint-staged": "9.2.0",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "tsc-watch": "2.2.1",
    "typescript": "3.5.3"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,yml,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
